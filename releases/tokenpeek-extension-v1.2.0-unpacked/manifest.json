{
  "manifest_version": 3,
  "name": "TokenPeek - Semantic Typography Inspector",
  "version": "1.2.0",
  "description": "Inspect semantic design tokens and typography on any webpage. Click any text to reveal applied tokens.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "TokenPeek - Inspect Design Tokens"
  },
  "permissions": ["activeTab", "scripting"],
  "homepage_url": "https://majestic-sherbet-f68b7c.netlify.app/",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
